@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="widget style1 navy-bg">
    <div class="row">
        <div class="col-4">
            <i class="fa fa-cloud fa-5x"></i>
        </div>
        <div class="col-8 text-right">
            <span> Bugünün Sıcaklığı </span>
            <h2 class="font-bold">@ViewBag.sicaklik 'K</h2>
        </div>
    </div>
</div>

<h1>Bloglar</h1>
<br />
<table class="table table-hover">
    <tr>
        <th>
            Blog Adı
        </th>
        <th>
            Tarih
        </th>
        <th>
            Sil
        </th>
        <th>
            Düzenle
        </th>
    </tr>
    @foreach (var blog in Model)
    {
        <tr>
            <td>
                @blog.BlogTitle
            </td>
            <td>
                @Convert.ToDateTime(blog.CreateDate).ToString("dd/MM/yyyy")
            </td>
            <td>
                <a href="/Admin/Category/DeleteCategory/@blog.BlogID" onclick="return confirm('Silmek İstediğinize Emin misiniz?')" class="btn btn-outline-danger">Delete</a>
            </td>
            <td>
                <a href="/Admin/Category/EditCategory/@blog.BlogID" class="btn btn-outline-success">Edit</a>
            </td>
        </tr>
    }
</table>
<a href="/Admin/Category/AddCategory/" class="btn btn-primary">Add New Blog</a>
<a href="/Admin/Blog/ExcelImport/" class="btn btn-info">Excel Import</a>

