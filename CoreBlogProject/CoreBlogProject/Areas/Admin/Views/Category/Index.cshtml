@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategoriler</h1>
<br />
<table class="table table-hover">
    <tr>
        <th>
            Kategori Adı
        </th>
        <th>
            Sil
        </th>
        <th>
            Düzenle
        </th>
    </tr>
    @foreach (var kategori in Model)
    {
        <tr>
            <td>
                @kategori.CategoryName
            </td>
            <td>
                <a href="/Admin/Category/DeleteCategory/@kategori.CategoryID" onclick="return confirm('Silmek İstediğinize Emin misiniz?')" class="btn btn-outline-danger">Delete</a>
            </td>
            <td>
                <a href="/Admin/Category/EditCategory/@kategori.CategoryID" class="btn btn-outline-success">Edit</a>
            </td>
        </tr>
    }
</table>
<a href="/Admin/Category/AddCategory/" class="btn btn-primary">Add New Category</a>
<br />
<br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
