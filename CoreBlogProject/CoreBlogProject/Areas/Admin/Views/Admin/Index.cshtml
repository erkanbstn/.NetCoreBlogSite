@using EntityLayer.Concrete
@model List<Admin>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yöneticiler</h1>
<br />
<table class="table table-hover">
    <tr>
        <th>
            Kullanıcı Adı
        </th>
        <th>
            Rol
        </th>
        <th>
            Sil
        </th>
        <th>
            Düzenle
        </th>
    </tr>
    @foreach (var admin in Model)
    {
        <tr>
            <td>
                @admin.UserName
            </td>
            <td>
                @admin.Role
            </td>
            <td>
                <a href="/Admin/Admin/DeleteAdmin/@admin.AdminID" onclick="return confirm('Silmek İstediğinize Emin misiniz?')" class="btn btn-outline-danger">Delete</a>
            </td>
            <td>
                <a href="/Admin/Admin/EditAdmin/@admin.AdminID" class="btn btn-outline-success">Edit</a>
            </td>
        </tr>
    }
</table>
<a href="/Admin/Admin/AddAdmin/" class="btn btn-primary">Add New Admin</a>
<br />
