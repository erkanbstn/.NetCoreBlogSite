@using EntityLayer.Concrete
@model List<Category>

@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<br />
<h2 style="text-align:center;color:orangered">All Categories</h2>
<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Kategori</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var i in Model)
    {
        <tr>

            <td>
                @i.CategoryID
            </td>
            <td>
                @i.CategoryName
            </td>
            <td>
                @i.CategoryDescription
            </td>
            <td>
                @i.CategoryStatus
            </td>
            <td>
               <a href="~/Category/Delete/@i.CategoryID" class="btn btn-warning">Sil</a>
            </td>
            <td>
                <a href="~/Category/Update/@i.CategoryID" class="btn btn-danger">Güncelle</a>
            </td>
        </tr>

    }
</table>
