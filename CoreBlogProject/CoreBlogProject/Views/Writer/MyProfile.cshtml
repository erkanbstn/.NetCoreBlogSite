@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "MyProfile";
    Layout = "~/Views/Shared/_Writer.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Bilgilerim</h4>
            <p class="card-description"> Buradan Bilgilerinizi Düzenleyebilirsiniz.</p>
            @using (Html.BeginForm("MyProfile", "Writer", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(b => b.WriterID)
                <div class="form-group">
                    <label>Yazar Adı</label>
                    @Html.TextBoxFor(b => b.WriterName, new { @class = "form-control", placeholder = "Adınızı Giriniz" })
                </div>
                <div class="form-group">
                    <label>Yazar Email</label>
                    @Html.TextBoxFor(b => b.WriterMail, new { @class = "form-control", placeholder = "Mailinizi Giriniz" })
                </div>
                <div class="form-group">
                    <label>Yazar Email</label>
                    @Html.TextAreaFor(b => b.WriterAbout, 2, 5, new { @class = "form-control", placeholder = "Hakkınızda Yazınızı Giriniz" })
                </div>
                <div class="form-group">
                    <label>Yazar Resim</label>
                    <input type="file" class="form-control" name="file">
                </div>
                <div class="form-group">
                    <label>Yazar Parola</label>
                    @Html.TextBoxFor(b => b.WriterPassword, new { @class = "form-control", placeholder = "Parolanızı Giriniz", type = "password" })
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Bilgilerimi Kaydet</button>
            }

        </div>
    </div>
</div>