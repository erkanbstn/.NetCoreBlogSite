@model IEnumerable<EntityLayer.Concrete.Blog>

<div class="tech-btm">
    <h4>Yazarın Diğer Blogları</h4>
    @foreach (var i in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="~/WebLog/BlogDetail/@i.BlogID">
                    <img src="~/WebLog/images/@i.BlogImage" class="img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">
                <h5>
                    <a href="single.html">@i.BlogContent.Substring(0, (i.BlogContent.Substring(0, 20).LastIndexOf(" "))) </a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @Convert.ToDateTime(i.CreateDate).ToString("dd/MMMM/yyyy")
                    </span>
                </div>
            </div>
        </div>
    }
</div>